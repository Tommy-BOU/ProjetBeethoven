{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}


<div class="container">

<h2>Détails du livre</h2>
<table class="table">
    <thead>
        <tr>
            <th>Image</th>
            <th>Titre</th>
            <th>Auteur</th>
            <th>Année de publication</th>
            <th>Résumé</th>
            <th>Note</th>
            <th>État</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td><img class="listImage" src="{{book.image}}" alt="image {{book.title}}"></td>
            <td>{{book.title}}</td>
            <td>{{book.author}}</td>
            <td>{{book.publicationYear}}</td>
            <td>{{book.summary}}</td>
            <td>{{book.globalRating}}</td>
            <td>{{book.state.name}}</td>
            <td>
                <button class="btn btn-warning">Réserver</button>
            </td>
        </tr>

        <a class="btn btn-primary" href="{{ path('app_book') }}">Retour à la liste</a>

    </tbody>
</table>
</div>
{% endblock %}
