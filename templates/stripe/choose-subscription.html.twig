{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<br><br><br>
<div class="container">
    <h2>Choisissez votre abonnement</h2>
    <form method="post" action="{{ path('payment_information') }}" data-turbo="false">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="abonnement" id="mensuel" value="mensuel" checked>
            <label class="form-check-label" for="mensuel">
                Mensuel - 23.99 €
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="abonnement" id="annuel" value="annuel">
            <label class="form-check-label" for="annuel">
                Annuel - (10% de réduction) - 259.08 €
            </label>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Continuer</button>
    </form>
</div>
{% endblock %}